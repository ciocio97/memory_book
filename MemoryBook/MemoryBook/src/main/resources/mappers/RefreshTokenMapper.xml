<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.memorybook.model.dao.RefreshTokenDao">
	<insert id="insert" parameterType="String" >
		INSERT INTO refresh_token (user_id, token)
		VALUES (#{userId}, #{refreshToken});
	</insert>
	<select id="selectByToken" resultType="String" parameterType="String">
		SELECT user_id FROM refresh_token
		WHERE token LIKE #{refreshToken};
	</select>
	<delete id="deleteByUserId" parameterType="String">
		DELETE FROM refresh_token
		WHERE user_id LIKE #{userId};
	</delete>
</mapper>